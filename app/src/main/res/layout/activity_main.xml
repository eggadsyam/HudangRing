<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@drawable/gradient_background"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <DatePicker
            android:id="@+id/datepicker"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible"></DatePicker>
        <TimePicker
            android:id="@+id/timepicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@drawable/gradient_background_2"
            android:numbersBackgroundColor="#FFF5EE"
            android:numbersTextColor="#000000"
            android:numbersSelectorColor="#FBD786"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Hudang"
            android:textStyle="bold" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/optAlarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ringtone 1"
                android:checked="true" />

            <RadioButton
                android:id="@+id/optNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ringtone 2" />

            <RadioButton
                android:id="@+id/optRingtone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ringtone 3" />

            <RadioButton
                android:id="@+id/optPicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other ringtone...." />

        </RadioGroup>

        <Button
            android:id="@+id/start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start"/>

        <TextView
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"/>

    </LinearLayout>

</LinearLayout>